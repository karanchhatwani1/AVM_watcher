<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutCustomPopUp"
    android:background="#d21A1a1a">

    <View
        android:id="@+id/rr"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#d21A1a1a"></View>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewDismiss"
        android:padding="7dp"
        android:src="@drawable/ic_close"
        ></ImageView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewMaximize"
        android:layout_toEndOf="@+id/imageViewDismiss"
        android:padding="7dp"
        android:src="@drawable/ic_open"
        android:layout_toRightOf="@+id/imageViewDismiss"></ImageView>

    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@+id/rr"
        android:id="@+id/PlayerView"
        app:use_controller="true"
        ></com.google.android.exoplayer2.ui.PlayerView>

</RelativeLayout>